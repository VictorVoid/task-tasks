<h1> Signup </h1>
<% if @user.errors.any? %>
    <p>
        Verifique o formul√°rio antes de continuar de continuar
    </p>
    <ul>
        <% for message in @user.errors.full_messages %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>
<%=	form_for @user, url: "/signup" do |f| %>
	<p>
		<%= f.label :name, "Seu nome" %>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :email, "Seu e-mail" %>
		<%= f.email_field :email %>
	</p>
	<p>
		<%= f.label :login, "Seu login" %>
		<%= f.text_field :login %>
	</p>
	<p>
		<%= f.label :password, "Sua senha" %>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :password_confirmation, "Confirme sua senha" %>
		<%= f.password_field :password_confirmation %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
